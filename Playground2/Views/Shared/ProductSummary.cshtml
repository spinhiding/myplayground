@model Icecream

<div class="col-sm-4 col-lg-4 col-md-4">
    <div class="thumbnail" >
        <div class="caption">
            <h3 class="pull-right">Icecream: @Model.IcecreamId</h3>
            <h3>
                <p>@Model.Cost.ToString("c")</p>
                <!--<a asp-controller="Icecream" asp-action="Details" asp-route-drinkId="@Model.IcecreamId">Icecream: @Model.IcecreamId</a>-->
            </h3>
            <p>Category: @Model.Category.Name</p>
        </div>
        <div class="addToCart" style="justify-content:center">
            <p class="button " >
                <a class="btn btn-success" id="cartButton" asp-controller="Cart" asp-action="AddToCart" asp-route-IcecreamId="@Model.IcecreamId">
                    Add to cart
                </a>
            </p>
        </div>
    </div>
</div>